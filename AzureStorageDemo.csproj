<Project Sdk="Microsoft.NET.Sdk.Web">
  <PropertyGroup>
    <!-- Use LTS to avoid SDK quirks -->
    <TargetFramework>net9.0</TargetFramework>
	  <Nullable>enable</Nullable>


	  <!-- Keep static web assets ON by default -->
    <StaticWebAssetsEnabled>true</StaticWebAssetsEnabled>
	<AspNetCoreHostingModel>InProcess</AspNetCoreHostingModel>

  </PropertyGroup>

  <!-- Make sure Release generates the manifest -->
  <PropertyGroup Condition="'$(Configuration)' == 'Release'">
    <GenerateStaticWebAssetsManifest>true</GenerateStaticWebAssetsManifest>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Azure.Data.Tables" Version="12.*" />
    <PackageReference Include="Azure.Storage.Blobs" Version="12.*" />
    <PackageReference Include="Azure.Storage.Queues" Version="12.*" />
    <PackageReference Include="Azure.Storage.Files.Shares" Version="12.*" />
  </ItemGroup>
</Project>
